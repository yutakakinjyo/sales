<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Url:</strong>
  <%= @customer.url %>
</p>

<p>
  <strong>Note:</strong>
  <%= @customer.note %>
</p>

<p>
<strong>States</strong> <br>
<% @customer.states.each do |state| %>
  <%= state.name %> : <%= state.date %> <br>
<% end %>
</p>

<p>
<strong>Events</strong> <br>
<% @customer.events.each do |event| %>
  <%= event.name %> : <%= event.date %> <br>
<% end %>
</p>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
